{
  "name": "probi-oh",
  "version": "1.0.0",
  "description": "Yu-Gi-Oh! Probability Simulator",
  "license": "GNU GPL3",
  "main": "index.js",
  "homepage": "https://codefatherg.github.io/probi-oh",
  "author": "CodeFatherG",
  "contributors": [
    {
      "name": "CodeFatherG"
    }
  ],
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "npm run start -w @probi-oh/web",
    "build": "npm run build -w @probi-oh/web",
    "build:all": "npm run build:deps && npm run build",
    "build:deps": "npm run build:types && npm run build:core",
    "build:types": "npm run build -w @probi-oh/types",
    "build:core": "npm run build -w @probi-oh/core",
    "test": "npm run test --workspaces",
    "test:web": "npm run test -w @probi-oh/web",
    "test:core": "npm run test -w @probi-oh/core",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d packages/web/dist"
  },
  "devDependencies": {
    "gh-pages": "^5.0.0"
  }
}
